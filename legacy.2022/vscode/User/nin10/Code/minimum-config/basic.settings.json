{
    "workbench.settings.editor": "json", // good for editing, [ctrl+,] should open global settings
    "editor.wordWrap": "off",
    "editor.wrappingIndent": "deepIndent",
    "editor.wrappingStrategy": "simple",
    "editor.formatOnSave": true,
    "editor.fontSize": 14,
    "editor.fontFamily": "'cascadia code pl', 'cascadia code', 'fira code retina', 'fira code','consolas', monospace",
    "[jsonc][json][xml][html]": {
        "editor.formatOnSave": true
    },
    "[jsonc][json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true,
        "editor.fontSize": 13,
    },
    // more:     "editor.brackets.*"
    "editor.links": true,
    "workbench.commandPalette.history": 50,
    "workbench.commandPalette.preserveInput": true,
    // editor.limit: kind of nice when you're exploring a ton of files
    "workbench.editor.limit.enabled": false,
    "workbench.editor.limit.perEditorGroup": false,
    "workbench.editor.limit.value": 10,
    "editor.suggestLineHeight": 40,
    "editor.find.seedSearchStringFromSelection": "selection",
    "search.exclude": { /* .. */},
    "files.exclude": { /* .. */},
    "files.defaultLanguage": "${activeEditorLanguage}",
    /*
        ###### SubSect: Files ‚á¢ Files.Associations

      */
    "files.defaultLanguage": "${activeEditorLanguage}",
    "files.trimTrailingWhitespace": true,
    "files.encoding": "utf8",
    "files.autoGuessEncoding": false,
    "search.useReplacePreview": true,
    "files.associations": {
        // these have higher precendence than extensions
        "*.json": "jsonc",
        "*.ps1xml": "xml", // unsure if you have to disable this for 'xml' schema to work?
        // microsoft / vs studio
        "*.psm1": "powershell",
    },
    // "[powershell][json][jsonc][markdown]": {},
    "launch": {
        "configurations": [
            {
                "name": "Cur.ps1 üèÉ‚Äç‚ôÇÔ∏è", // a global 'run current Pwsh file'
                "type": "PowerShell",
                "request": "launch",
                "script": "${file}",
                "presentation": {
                    "hidden": false,
                    "group": "Invoke-Run",
                    "order": 1
                },
                "cwd": "${file}",
                "args": [
                    "-NoL"
                ],
                // "args": ["-NoL", "-NoP"],
            },
        ],
        "compounds": []
    }
}

