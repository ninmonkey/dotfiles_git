        "description": "ninParameter Template üêí 2021/06/08-work",
        "body": [
            "# ${1}",
            "[Parameter(${2})]",
            "[${3:String}]\\$${4:ParameterName}${0}"
        ]
    },
    "ninPwsh Function": {
        "scope": "bat",
        "prefix": "ninFunction üêí",
        "description": "ninFunction Template üêí 2021/06/08-work",
        "body": [
